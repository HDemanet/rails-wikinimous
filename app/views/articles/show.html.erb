<h1><%= @article.title %></h1>
<p><%= @article.content %></p>

<div class="d-flex justify-content-center mt-4" style="gap: 10px;">
  <%= link_to edit_article_path(@article), class: 'btn btn-secondary' do %>
    <i class="fas fa-pencil-alt mr-2"></i> Edit
  <% end %>

  <%= link_to article_path(@article), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
    <i class="fas fa-trash-alt mr-2"></i> Delete
  <% end %>
</div>
